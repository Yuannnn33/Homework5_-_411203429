@model XAXBEngine

<h2>1A2B猜數字遊戲</h2>

@using (Html.BeginForm("Guess", "Game", FormMethod.Post))

{
    <label for="guess">輸入猜測：</label>
    <input type="text" id="guess" name="Guess" value="@Model.Guess" />
    <input type="submit" class="btn btn-secondary" value="猜！" style="background-color:darkslategrey" />
}
@if (!string.IsNullOrEmpty(Model.Store))

{
    <h3>猜測紀錄:</h3>  
    <pre>@Model.Store</pre>
}
@if (!string.IsNullOrEmpty(Model.Result))

{
    <p>猜測結果：@Model.Result</p>
    <p>你已猜測 @Model.GuessCount 次</p>
}
@if (!string.IsNullOrEmpty(Model.GameOverMessage))

{
    <h3>@Model.GameOverMessage</h3>
    <form asp-action="Restart" asp-controller="Game" method="post">
        <input type="submit" class="btn btn-outline-secondary" value="再來一次" style="background-color:darkslategrey" />
    </form>
}